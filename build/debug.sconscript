import itertools
import sys
from build import create_objs

Import('common_files')
main_files = ['main.c']
lib_files = []
c_flags = ""

if sys.platform == 'win32':
	c_flags = "/nologo /Od /WX /W4 /D_CRT_SECURE_NO_WARNINGS"
elif sys.platform == "linux2":
	lib_files.append("librt")
	lib_files.append("libpthread")
	c_flags = "-Wall -g -ggdb"

env = Environment(CCFLAGS=c_flags, CPPPATH="#src")
env.VariantDir(variant_dir='#obj/debug', src_dir='#src', duplicate=False)

main_build = ['#obj/debug/' + p for p in itertools.chain(common_files, main_files)]

env.Program(target='#bin/debug',
			source=create_objs(env, main_build),
			LIBS=lib_files)
